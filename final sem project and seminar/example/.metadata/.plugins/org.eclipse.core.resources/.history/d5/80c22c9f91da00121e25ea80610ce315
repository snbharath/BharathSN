	public void onClick(View arg0)
	{
		if(arg0==b_add)
		{
			Log.e(CONNECTIVITY_SERVICE, "inside Favorite Add");
			text.setText(name);
			Dialog dlg = Utility.createShowDialog(this, selectedShow);
			dlg.show();
		}
		
		if(arg0==b_cancel)
		{
			finish();
		}
	}
